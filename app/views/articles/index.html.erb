<%= link_to '記事を追加する', new_article_path %>

<br><br>

<table class="table">
  <thead>
    <tr>
      <th>タイトル</th>
      <th>投稿者</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= link_to article.title, article.url, :target=>["_blank"]%></td>
        <td><%= article.user.email %></td>
        <% if article.user_id.to_i == current_user.id.to_i %>
          <td><%= link_to '編集', edit_article_path(article) %></td>
          <td><%= link_to '削除', article, method: :delete, data: { confirm: '削除してよろしいですか？' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>


