<%= search_form_for @q do |f| %>
  <%# 検索ボタン %>
  <%= f.search_field :title_or_author_or_publisher_or_owner_cont, placeholder: '検索' %>
  <%= f.submit %>
<% end %>

<%= paginate @books %>

<table class="table">
  <thead>
    <tr>
      <!--<th>#</th>-->
      <th><%= sort_link(@q, :id,'ID') %></th>
      <th>図書名</th>
      <th>貸出日</th>
      <th>返却期限</th>
      <th>状態</th>
      <th><%= sort_link(@q, :comments_count,'コメント数') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.id %></td>
        <td><%= link_to book.title, book %></td>

        <% if book.user.syoko %>
          <td>貸出可能(<%=book.user.place %>)</td>
          <td>-</td>
          <td>-</td>
        <% else %>
          <td><%= (book.updated_at).strftime("%m-%d") %></td>
          <td><%= (book.updated_at + 7.days).strftime("%m-%d") %></td>
          <% if book.user.email.include?("@") then %>
            <td>貸出中</td>
          <% else %>
            <td>-</td>
          <% end %>
        <% end %>

        <td><%= book.comments_count %></td>
      </tr>
    <% end %>

  </tbody>
</table>
