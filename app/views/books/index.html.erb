<table class="table">
  <thead>
    <tr>
      <!--<th>#</th>-->
      <th>図書名</th>
      <th>貸出日</th>
      <th>返却期限</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <!--<td><%= book.id %></td>-->
        <td><%= link_to book.title, book %></td>
        <% if book.user_id == 1 %>
          <td>貸出可能(17Fベイ側書庫)</td>
          <td>-</td>

        <% elsif book.user_id == 2 %>
          <td>貸出可能(17Fリバー側書庫)</td>
          <td>-</td>

        <% else %>
          <td><%= (book.updated_at).strftime("%Y-%m-%d") %></td>
          <td><%= (book.updated_at + 7.days).strftime("%Y-%m-%d") %></td>
        <% end %>

      </tr>
    <% end %>
  </tbody>
</table>
