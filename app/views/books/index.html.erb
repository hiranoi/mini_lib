<table class="table">
  <thead>
    <tr>
      <th>#</th>
      <th>図書名</th>
      <th>現在の所有者</th>
      <th>最終更新日時</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.id %></td>
        <td><%= link_to book.title, book %></td>
        <td><%= book.user.email %></td>
        <td><%= book.updated_at %></td>
      </tr>
    <% end %>
  </tbody>
</table>
