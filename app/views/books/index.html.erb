
<%= paginate @books %>

<table class="table">
  <thead>
    <tr>
      <!--<th>#</th>-->
      <th>図書名</th>
      <th>貸出日</th>
      <th>返却期限</th>
      <th>利用者</th>
      <th>コメント数</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <!--<td><%= book.id %></td>-->
        <td><%= link_to book.title, book %></td>

        <% if book.user.syoko %>
          <td>貸出可能(<%=book.user.place %>)</td>
          <td>-</td>
          <td>-</td>
        <% else %>
          <td><%= (book.updated_at).strftime("%Y-%m-%d") %></td>
          <td><%= (book.updated_at + 7.days).strftime("%Y-%m-%d") %></td>
          <td><%= book.user.email %></td>
        <% end %>

        <td><%= book.comments_count %></td>
      </tr>
    <% end %>

  </tbody>
</table>
