<button class="btn btn-info btn-block active" onClick="location.href='/books/new?isbn=y'">新しい図書を登録する</button>
<br>
<%= search_form_for @q do |f| %>
<div class="input-group">
  <%= f.search_field :title_or_author_or_publisher_or_owner_cont, placeholder: '図書名、所有者で探す', class:'form-control' %>
  <span class="input-group-btn">
    <button class="btn btn-primary" type="submit">検索</button>
  </span>
</div>
<% end %>
<h4>おすすめ図書</h4>
<a class="btn btn-primary btn-block active" href="/books?utf8=%E2%9C%93&q%5Btitle_or_author_or_publisher_or_owner_cont%5D=tsutax%40icloud.com">ツクヲススメ</a>
<a class="btn btn-primary btn-block active" href="/books?q%5Bs%5D=comments_count+desc">コメントが多い</a>
<br>
<%= paginate @books %>
<% @books.each do |book| %>
<div class="panel panel-default">
  <div class="panel-heading">
  <h4><%= link_to book.title, book %></h4>
  </div>
  <div class="panel-body">
    <% if !book.rent_user_id? %>
      <span class="label label-info">貸出可能</span>
      <h6>所有者：<%= book.owner %></h6>
      <h6>場所：<%= book.user.place %></h6>
    <% else %>
      <span class="label label-warning">貸出中</span>
      <h6>所有者：<%= book.owner %></h6>
      <h6>返却予定：<%= (book.updated_at + 7.days).strftime("%Y/%m/%d") %></h6>

    <% end %>
    <h5>コメント：<%= book.comments.count %>件</h5>
    <% if book.comments.count > 0 %>
      <div class="panel-footer">
      <h6><%= book.comments[book.comments.count - 1].comment %></h6>
      </div>
    <% end %>
  </div>
</div>

<% end %>
<%= paginate @books %>