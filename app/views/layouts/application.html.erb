<!DOCTYPE html>
<html>
<head>
  <title>MOKU LIB</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<nav class="navbar navbar-default ">
  <div class="container-fluid">
  <!-- ヘッダー部分 ================ -->
    <div class="navbar-header">
      <%= link_to 'MOKU LIB', root_path,{ :class => "navbar-brand" } %>
      <!--<a class="navbar-brand" href="#">MIN LIB</a> -->
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#nav_target">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
    </div>
  <!-- 中央のナビゲーション部分 ================ -->
    <div class="collapse navbar-collapse" id="nav_target">
      <ul class="nav navbar-nav">
        <!-- リンクのみ -->
        <li><%= link_to 'Books', books_path %></li>
        <li><%= link_to 'Register', new_book_path %></li>
        <li><%= link_to 'About', 'https://github.com/hiranoi/mini_lib' %></li>
      </ul>
      <ul class="nav navbar-nav navbar-right">
      <% if user_signed_in? %>
        <li><%= link_to 'edit profile', edit_user_registration_path %></li>
        <li><%= link_to "logout", destroy_user_session_path, method: :delete %></li>
      <% else %>
        <li><%= link_to 'signin', new_user_registration_path %></li>
        <li><%= link_to 'login', new_user_session_path %></li>
      <% end %>
      </ul>
    </div>
  </div>
</nav>

<div class="container">
  <% if flash[:notice] %>
    <div class="alert alert-success">
      <%= flash[:notice] %>
    </div>
  <% end %>
  <% if flash[:alert] %>
    <div class="alert alert-danger">
      <%= flash[:alert] %>
    </div>
  <% end %>

<%= yield %>

</div>
</body>
</html>
