<h1>貸出履歴</h1>

<table class="table">
  <thead>
    <tr>
      <th>ID</th>
      <th>ユーザ名</th>
      <th>図書名</th>
      <th>レンタル日</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rent_history.each do |r| %>
      <tr>
        <td><%= r.id %></td>
        <td><%= r.user_id %></td>
        <td><%= r.book_id %></td>
        <td><%= (r.created_at).strftime("%Y-%m-%d") %></td>
      </tr>
    <% end %>
  </tbody>
</table>