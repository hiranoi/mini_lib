<% if !@slides.empty? %>

<% @slides.each do |slide| %>

<div class="panel panel-default">
	<div class="panel-body">
		<a href="/slides/<%= slide.id %>">
			<img src=<%= slide.thumbnail_url %> alt=<%= slide.title %> align="right">
		</a>
		<h5>タイトル</h5>
			<p><%= slide.title %></p>
		<h5>推薦者</h5>
			<p><%= slide.recommend_user %></p>
			<br>
		<h5>推薦コメント</h5>
			<p><%= slide.recommend_comment %></p>
	</div>
</div>

<% end %>

<% end %>
