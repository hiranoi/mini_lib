<div class="contianer">
<div class="wrapper style1">

<header class="major">
	<h1>スライド一覧</h1>
</header>

<div class="panel">
	<div class="panel-body">
		<button class="btn-primary" onClick="location.href='/slides/new'">新しいスライドを追加する</button>
	</div>
</div>

<% if !@slides.empty? %>

<% @slides.each do |slide| %>

<div class="panel">
	<div class="panel-body">
		<a href=<%= slide.url %>>
			<img src=<%= slide.thumbnail_url %> alt=<%= slide.title %> align="right">
		</a>
		<h5>タイトル</h5>
			<p><%= slide.title %></p>
		<h5>推薦者</h5>
			<p><%= slide.recommend_user %></p>
			<br>
		<h5>推薦コメント</h5>
			<p><%= slide.recommend_comment %></p>
	</div>
</div>

<% end %>

<% end %>
</ul>
</div>
</div>