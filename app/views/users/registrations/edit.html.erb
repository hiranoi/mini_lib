<h2>アカウント設定</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  <div class="field">
    <label>ニックネーム</label>
    <%= f.text_field :user_name %>
  </div>
  <div class="field">
    <label>あなたが登録した図書の保管場所</label>
    <%= f.text_field :place %>
  </div>
  <br>
    <div class="field">
    <%= f.label :avatar %>
    <%= f.file_field :avatar %>
  </div>
  <br>
  <div class="action">
    <button type="submit" class="btn btn-primary">更新する</button>
  </div>

<% end %>